<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{author.name}}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/authors.css">
</head>
<body>
    <div class="ui container">
        <a href="/nobel/{{email}}" class="back-button">Back to Nobel Page</a> <!-- BACK BUTTON -->

        <div class="ui segment">
            <!-- AUTHOR DETAILS -->
            <div class="author-details">
                <h2 style="color: #5a3e36">{{author.name}}</h2>
                <p style="color: #5a3e36"><strong>Language:</strong> {{author.language}}</p>
                <p style="color: #5a3e36"><strong>Date of Birth:</strong> {{author.dob}}</p>
                <p style="color: #5a3e36"><strong>Residence:</strong> {{author.residence}}</p>
                <p style="color: #5a3e36"><strong>Prize Motivation:</strong> {{author.prizeMotivation}}</p>

                <!-- BIOGRAPHY -->
                <h2 style="color: #5a3e36">Biography</h2>
                <p style="color: #5a3e36; line-height: 2;">{{author.biography}} <a href="{{author.wikiLink}}" target="_blank">[reference]</a></p>
            </div>
            <!-- NOTABLE WORKS -->
            <div class="notable_works">
                <h2 style="color: #5a3e36">Notable Works</h2>
                <div class="book-images">
                    {{#author.books}}
                        <img src="/images/{{image}}" alt="{{title}}">
                    {{/author.books}}
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="ui inverted vertical segment footer">
        <div class="ui container">
            <div class="ui stackable divided equal height stackable grid">
                <div class="four wide column">
                    <h4 class="ui inverted" style="color: white">Connect With Us</h4>
                    <div class="ui  inverted link list">
                        <a href="#" class="item" style="color: white"><i class="facebook icon"></i> Facebook</a>
                        <a href="#" class="item" style="color: white"><i class="twitter icon"></i> Twitter</a>
                        <a href="#" class="item" style="color: white"><i class="instagram icon"></i> Instagram</a>
                    </div>
                </div>
                <div class="four wide column">
                    <h4 class="ui inverted" style="color: white">Contact Us</h4>
                    <p style="color: white">Email: booknest@gmail.com</p>
                    <p style="color: white">Phone: +123 456 7890</p>
                </div>


                <div class="eight wide column">
                    <h4 class="ui inverted" style="color: white">Newsletter</h4>
                    <p style="color: white">Subscribe for updates on new book releases.</p>

                    <form action="/subscribe/{{email}}" method="post" class="ui action input" style="width: 100%;">
                        <input type="email" name="newsletteremail" placeholder="Your email..." required>
                        <button class="ui button" type="submit">Subscribe</button>
                    </form>
                </div>

                <!-- Modal for Subscription Feedback -->
                <div class="ui modal" id="subscription-modal">
                    <div class="header" id="modal-header">Subscription</div>
                    <div class="content">
                        <p id="modal-message">Thanks for subscribing!</p>
                    </div>
                    <div class="actions">
                        <div class="ui approve button">OK</div>
                    </div>
                </div>


            </div>
            <div class="ui center aligned container">
                <p style="color: white">&#xa9; 2025 BookNest. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JAVASCRIPT -->
    <script>
        $(document).ready(function() {
            $("#login-btn").click(function() {
                $("#login-modal").modal("show");
            });

            $("#signup-btn").click(function() {
                $("#signup-modal").modal("show");
            });

            $("#mobile-menu-toggle").click(function() {
                $(".menu-items").toggleClass("active");
            });

            const subscribed = '{{#subscribed}}true{{/subscribed}}';
            const subscribeFailed = '{{#subscribeFailed}}true{{/subscribeFailed}}';

            if (subscribed === 'true') {
                $('#modal-header').text("You're Subscribed!");
                $('#modal-message').text("Thanks for subscribing to BookNest ðŸŽ‰");
                $('#subscription-modal').modal('show');
            }

            if (subscribeFailed === 'true') {
                $('#modal-header').text("Already Subscribed");
                $('#modal-message').text("You're already on our list ðŸ˜Š No need to subscribe again.");
                $('#subscription-modal').modal('show');
            }
        });
    </script>
</body>
</html>
